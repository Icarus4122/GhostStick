# GhostStick Update Configuration
# Edit at: /opt/ghoststick/update.env

# Auto-update frequency: weekly, daily, off
AUTO_UPDATE="weekly"

# Allow updates: auto, force, block
ALLOW_UPDATES="auto"

# Stealth level affects updates
STEALTH_LEVEL="medium"

# Require safe upstream before updating
SAFE_ONLY="true"

# Package mode: stable, bleeding
PKG_MODE="stable"
