# GhostStick Security Configuration
# Edit at: /opt/ghoststick/security.env

# Stealth level: low, medium, high
STEALTH_LEVEL="medium"

# Hostname randomization on boot
RANDOMIZE_HOSTNAME="true"

# MAC address randomization
RANDOMIZE_MAC="true"

# Minimize system logging
MINIMIZE_LOGS="true"

# Disable unnecessary services
DISABLE_SERVICES="true"

# Apply kernel hardening
KERNEL_HARDENING="true"

# Allow SSH password authentication
ALLOW_PASSWORD_SSH="true"

# Factory seal (irreversible lockdown)
FACTORY_SEAL="false"

# History wiping
WIPE_HISTORY="true"

# Package cache cleanup
WIPE_PKG_CACHE="true"
